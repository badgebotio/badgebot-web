<% include _shared/header %> 
<div class="container container-margin-top-40">
    <div class="row">
        <div class="col-12">
            <h3 class="mt-3 mb-3"><%= title %></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <div class="text-center pb-3">
                <img class="image-fluid displayed-badge-image" src="data:image/png;base64, <%= badgeImage %>" alt="<%= badge.badge_name %> image" />
            </div>
            <div class="d-none d-lg-block">
                <div class="pb-3">
                    <strong>Badge Data:</strong> <a style="overflow-wrap: break-word;" href="<%- assertionUrl %>" target="_blank"><%- assertionUrl %></a>
                </div>
                <div>
                    <a class="btn btn-info btn-sm" href="/earned/<%= id %>/download" target="_parent">Download a Verifiable Open Badge</a>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <div class="pb-3">
                        <strong>Earned by:</strong> <a href="https://twitter.com/<%- earner %>" target="_blank">@<%- earner %></a><br/>
                        <%- evidenceNarrative %>
                    </div>
                    <div class="pb-3">
                        <strong>Issued On:</strong> <%- issuedOn %>
                    </div>
                    <div>
                        <strong>Evidence:</strong> 
                        <blockquote class="twitter-tweet"><p lang="en" dir="ltr"><a href="<%= evidence %>"><%= evidence %></a></blockquote>
                    </div>
                    <div class="pt-3 d-lg-none .d-xl-block">
                        <div class="pb-3">
                            <strong>Badge Data:</strong> <a style="overflow-wrap: break-word;" href="<%- assertionUrl %>" target="_blank"><%- assertionUrl %></a>
                        </div>
                        <div>
                            <a class="btn btn-info btn-sm" href="/earned/<%= id %>/download" target="_parent">Download a Verifiable Open Badge</a>
                        </div>
                    </div>

                    <!-- <div>
                        <button type="button" class="btn btn-info btn-sm" id="sendToBadgrBackpack" data-assertion-url="<%- assertionUrl %>">Send to Badgr Backpack</button> <ion-icon name="information-circle" size="small" class="info-icon" data-toggle="tooltip" data-placement="right" title="Note to @<%- earner %> - Badgr will authenticate your Twitter account. If you have an existing Badgr Backpack account and would like to add this badge to it, first log in to Badgr and add your Twitter account then click this button. Otherwise, a new backpack account will be created."></ion-icon>
                    </div> -->
                </div>
            </div>

            <div class="mt-3 smaller-text">
                Only @<%- earner %> can delete this badge by tweeting the following:
            </div>
            <div class="pt-1">
                <pre>@badgebotio #<%- badge.delete_hashtag_id %>-<%- id %></pre>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-12 pt-5">
            <h4><%= badge.description %></h4>
            <p><%- badge.criteria.narrative %></p>
            <p class="smaller-text"><%- badge.support_description %></p>
        </div>
    </div>  
    <div class="row">
        <div class="col-12 mb-3">
            <h4 class="pt-3">Instructions</h4>
            <div>
                <% badge.criteria.details.forEach(function(criteria){ %>
                    <div class="container-margin-bottom-40">
                        <div><%- criteria.description %></div>
                        <div class="pb-3"><strong>Example Tweet:</strong> <div><%- criteria.example_tweet %></div></div>
                        <div><strong>Optional:</strong> <%- criteria.optional %></div>
                        <div><strong>Hashtag:</strong> #<%- badge.hashtag_id %></div>
                        <div><strong>Evidence:</strong> <%- criteria.evidence_required %></div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div> 
    <div class="row">
        <div class="col-12 mb-5">
            <h4>FAQs</h4>
            <div>
                <% for(var i=0; i<badge.faqs.length; i++) { %>
                    <p><em>Question: <%- badge.faqs[i].question %></em></br/>
                    Answer: <%- badge.faqs[i].answer %></p>
                <% }; %>
            </div>
        </div>
    </div>                    
</div>
<% include _shared/footer %> 
<script src="https://backpack.openbadges.org/issuer.js"></script>

