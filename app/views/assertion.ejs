<% include _shared/header %> 
<div class="container container-margin-top-40">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mt-3"><%= title %></h1>
            <div class="row container-margin-top-40 container-margin-bottom-40">
                <div class="col-lg-5 product-detail-img">
                    <div class="my-1 svg-container">
                    <%- badgeSVG %>
                    </div>
                </div>

                <div class="col-lg-7 product-detail">
                    <div><strong>Earned by:</strong> @<%- earner %><br/>
                    <%- evidenceNarrative %></div>
                    <div><strong>Issued On:</strong> <%- issuedOn %></div>
                    <div><strong>Evidence:</strong> <a href="<%- evidence %>" target='_blank' title="Badge evidence"><%- evidence %></a></div>

                <div class="container-margin-bottom-40">&nbsp;</div>
                    <h3><%= badge.description %></h3>

                    <p><%- badge.criteria.narrative %></p>

                    <p class="smaller-text"><%- badge.support_description %></p>
        
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <h4>Instructions</h4>
                    <div class="lead">
                        <% badge.criteria.details.forEach(function(criteria){ %>
                            <div class="container-margin-bottom-40">
                                <div><%- criteria.description %></div>
                                <div><strong>Optional:</strong> <%- criteria.optional %></div>
                                <div><strong>Hashtag:</strong> <%- criteria.hashtag_id %></div>
                                <div><strong>Evidence:</strong> <%- criteria.evidence_required %></div>
                                <div><strong>Example Tweet:</strong> <%- criteria.example_tweet %></div>
            
                                <!-- add an download the open badge if that is done in time -->
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div> 
            <div class="row">
                <div class="col-lg-12">
                    <h4>FAQs</h4>
                    <div class="lead">
                        <% for(var i=0; i<badge.faqs.length; i++) { %>
                            <p><em>Question: <%- badge.faqs[i].question %></em></br/>
                            Answer: <%- badge.faqs[i].answer %></p>
                        <% }; %>
                    </div>
                </div>
            </div>                      
        </div>
    </div>
</div>
<% include _shared/footer %> 

