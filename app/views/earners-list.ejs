<% include _shared/header %> 
<div class="container container-margin-top-40">
    <div class="row">
        <div class="col-md-12">
            <h3 class="mt-3"><%- title %></h3>
            <div class="row container-margin-top-40 container-margin-bottom-40">
                <div class="col-lg-4">
                    <div class="my-1 text-center">
                    <img class="image-fluid displayed-badge-image" src="<%= badge.badgeImageURL %>" alt="<%= badge.name %> Image" />
                    </div>
                    <h5 class="pt-3 text-center">Number of Earners: <%- countEarners %> </h5>
                </div>

                <div class="col-lg-8 product-detail">
                    <% earners.forEach(function(earner){ %>
                    <div class="row">
                        <div class="col-12 pb-3">
                            <a href="/earned/<%- earner.assertionGistId%>" target="_blank"><%- earner.username %></a><br/>
                            Issued on <%- earner.issuedOn %>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">

            </div>
        </div>
    </div>
<% include _shared/footer %> 