<% include _shared/header %> 
    <div class="container container-margin-top-40">
        <div class="row">
            <div class="col-12">
                <h3 class="mt-3 mb-3"><%= title %></h3>
            </div>
        </div>
        <% badges.forEach(function(badge){ %>
            <div class="row pb-3">
                <div class="col-lg-3">
                    <div class="my-1 text-center">
                        <a href="/badge/<%= badge.gistId %>"><img class="image-fluid displayed-badge-image" src="<%= badge.badgeImageURL %>" alt="<%= badge.name %> image" /></a>
                    </div>
                </div>

                <div class="col-lg-9">
                    <div class="mt-5 pb-3">
                        <a href="/badge/<%= badge.gistId %>"><%= badge.name %></a>
                    </div>
                    <div class="pb-3">
                        <%= badge.description %>
                    </div>

                    <div class="pb-3">
                        <a href="/earners-list/<%- badge.gistId %>">View earners</a> &nbsp; 
                        <% if (badge.criteria.details[0].logic_function == "tweet_text_self") { %> <a href="/earners-map/<%- badge.gistId %>">View map of earners</a> <% } %>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% include _shared/footer %> 